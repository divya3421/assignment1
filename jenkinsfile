pipeline {
  agent any
  stages {
  stage('Clone Repository') {
    steps {
        git 'https://github.com/divya3421/assignment1.git'
          }
    }
    stage('Deploy HTML') {
        steps {
            sh 'git --version'
            sh 'sudo mkdir -p /var/www/html'
            sh 'sudo cp hello.html /var/www/html/hello.html'
            sh 'sudo systemctl restart apache2 '
            }
        }
  }
}

